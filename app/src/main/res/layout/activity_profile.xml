<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/image_defult"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/default_profile" />

    <TextView
        android:id="@+id/user_visit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_defult"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="#ffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/user_visit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_visit_name"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Status"
        android:textColor="#ffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/user_send_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_visit_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="159dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Send Friebd Request"
        android:textColor="#D10808"
        android:textSize="20sp" />
    <Button
        android:id="@+id/user_decline_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_send_request"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="decline Friebd Request"
        android:textColor="#D10808"
        android:textSize="20sp" />


</RelativeLayout>